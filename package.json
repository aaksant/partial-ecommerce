{
  "name": "partial-ecommerce",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./frontend\" --filter \"./backend\" dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "install:all": "pnpm install",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:generate": "pnpm --filter backend db:generate",
    "db:push": "pnpm --filter backend db:push",
    "db:studio": "pnpm --filter backend db:studio"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
